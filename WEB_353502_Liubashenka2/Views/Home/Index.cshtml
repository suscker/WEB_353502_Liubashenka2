@model List<ListDemo>

<h1>@ViewData["Title"]</h1>

<!-- Список с циклом for -->
<div class="mt-4">
    <h3>Список (с циклом for)</h3>
    <ol type="A">
        @for (int i = 1; i <= 5; i++)
        {
            <li>элемент @i списка</li>
        }
    </ol>
</div>

<!-- Форма с SelectList -->
<div class="mt-4">
    <h3>Форма с выбором элемента</h3>
    <form method="post">
        <!-- Select список -->
        <div class="mb-3">
            <label for="selectedItem" class="form-label">Выберите элемент:</label>
            <select class="form-select" asp-items="@(new SelectList(Model, "Id", "Name"))" name="selectedItem" id="selectedItem">
                <option value="">-- Выберите элемент --</option>
            </select>
        </div>

        <!-- Кнопка отправки -->
        <button type="submit" class="btn btn-primary">Отправить</button>
    </form>
</div>

<div class="mt-4">
    <h3>Исходная форма</h3>
    <form method="post">
        <!-- Чекбоксы -->
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="checkbox1" id="checkbox1">
            <label class="form-check-label" for="checkbox1">Чек-бокс 1</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="checkbox2" id="checkbox2">
            <label class="form-check-label" for="checkbox2">Чек-бокс 2</label>
        </div>

        <!-- Радиокнопки -->
        <div class="form-check">
            <input class="form-check-input" type="radio" name="radioGroup" id="radio1" value="1">
            <label class="form-check-label" for="radio1">Радио-1</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="radioGroup" id="radio2" value="2">
            <label class="form-check-label" for="radio2">Радио-2</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="radioGroup" id="radio3" value="3">
            <label class="form-check-label" for="radio3">Радио-3</label>
        </div>

        <!-- Поле логина -->
        <div class="mb-3">
            <label for="login" class="form-label">Логин:</label>
            <input type="text" class="form-control" id="login" name="login" placeholder="Введите имя">
        </div>

        <!-- Поле пароля -->
        <div class="mb-3">
            <label for="password" class="form-label">Пароль:</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Введите пароль">
        </div>

        <!-- Кнопка отправки -->
        <button type="submit" class="btn btn-primary">Отправить</button>
    </form>
</div>